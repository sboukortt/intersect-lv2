CXXFLAGS = @(CXXFLAGS) -fPIC -std=c++1z
LFLAGS = @(LFLAGS)

!cxx = |> @(CXX) -c %f -o %o $(CXXFLAGS) |> %B.o
!so = |> @(CXX) -shared %f -o %o $(CXXFLAGS) $(LFLAGS) |>
!ar = |> @(AR) cr %o %f |>
